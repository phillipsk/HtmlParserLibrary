<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HtmlParserView">
        <attr name="themeToken" format="string"/>
    </declare-styleable>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="tag_br" parent="tag_space"/>

    <style name="tag_code" parent="text_style_default">
        <item name="android:padding">8dp</item>
    </style>

    <style name="tag_div" parent="text_style_default"/>

    <style name="tag_h1" parent="tag_header">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="tag_h2" parent="tag_header">
        <item name="android:textSize">28dp</item>
    </style>

    <style name="tag_h3" parent="tag_header">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="tag_h4" parent="tag_header">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="tag_h5" parent="tag_header">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="tag_h6" parent="tag_header">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="tag_img">
        <item name="android:padding">12dp</item>
    </style>

    <style name="tag_header" parent="text_style_default">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="tag_hr" parent="tag_space"/>

    <style name="tag_li" parent="text_style_default">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="tag_ol" parent="text_style_default"/>

    <style name="tag_p" parent="text_style_default"/>

    <style name="tag_pre" parent="text_style_default"/>

    <style name="text_style_default">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="tag_script">
        <item name="android:visibility">gone</item>
    </style>

    <style name="tag_space">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="tag_table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0.5dp</item>
        <item name="android:background">@drawable/bg_table_td_tag</item>
    </style>

    <style name="tag_tbody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="tag_td">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/bg_table_td_tag</item>
    </style>

    <style name="tag_th" parent="tag_td">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tag_tr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tag_ul" parent="text_style_default"/>

    <style name="iframe_full_screen_button" parent="text_style_default">
        <item name="android:layout_gravity">end</item>
        <item name="android:text">Open in new screen</item>
        <item name="android:src">@drawable/ic_fullscreen</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>