<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="activityTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="tag_br" parent="spaceStyleDefault"/>

    <style name="tag_code">
        <item name="android:padding">8dp</item>
    </style>

    <style name="tag_h1" parent="headerStyleDefault">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="tag_h2" parent="headerStyleDefault">
        <item name="android:textSize">28dp</item>
    </style>

    <style name="tag_h3" parent="headerStyleDefault">
        <item name="android:textSize">26dp</item>
    </style>

    <style name="tag_h4" parent="headerStyleDefault">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="tag_h5" parent="headerStyleDefault">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="tag_h6" parent="headerStyleDefault">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="headerStyleDefault">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="tag_img">
        <item name="android:padding">12dp</item>
    </style>

    <style name="tag_li">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="textStyleDefault">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="tag_script">
        <item name="android:visibility">gone</item>
    </style>

    <style name="spaceStyleDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="tag_table">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0.5dp</item>
        <item name="android:background">@drawable/bg_table_td_tag</item>
    </style>

    <style name="tag_tbody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="tag_td">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/bg_table_td_tag</item>
    </style>

    <style name="tag_th" parent="tag_td">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tag_tr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="iFrameFullScreenButton">
        <item name="android:layout_gravity">end</item>
        <item name="android:text">Open in new screen</item>
        <item name="android:src">@drawable/ic_fullscreen</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
</resources>
